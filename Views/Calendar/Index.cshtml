@model IEnumerable<WIShipwrecks.Models.Calendar>

@{
    ViewBag.Title = "Calendar";
}

<h2>Calendar</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Date.Value.ToString("MM/dd/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td width="500px">
                @Html.Raw(Html.Encode(item.Description).Replace("\n", "<br />"))
            </td>
            <td>
                <a href="@item.URL">@Html.DisplayFor(modelItem => item.URL)</a>
            </td>
            <td width="70px">
                <a href="@Url.Action("Edit", "Calendar", new { id = item.ID })" class="btn btn-info btn-xs">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="@Url.Action("Delete", "Calendar", new { id = item.ID })" class="btn btn-danger btn-xs">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
    }

</table>
