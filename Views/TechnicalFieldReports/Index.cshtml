@model IEnumerable<WIShipwrecks.Models.TechnicalFieldReport>

@{
    ViewBag.Title = "TechnicalFieldReport";
}

<h2>Technical Field Reports</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Filename)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
				@Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
			<a href="~/Files/@item.Filename">
				@Html.DisplayFor(modelItem => item.Filename)
			</a>
        </td>
        <td width="70px">
			<a href="@Url.Action("Edit", "TechnicalFieldReports", new { id = item.ID })" class="btn btn-info btn-xs">
				<span class="glyphicon glyphicon-pencil"></span>
            </a>
            <a href="@Url.Action("Delete", "TechnicalFieldReports", new { id = item.ID })" class="btn btn-danger btn-xs">
				<span class="glyphicon glyphicon-trash"></span>
            </a>
        </td>
    </tr>
}

</table>
