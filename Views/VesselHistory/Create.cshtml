@model WIShipwrecks.Models.VesselHistory

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Vessel Story</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.VesselID, new { @Value = ViewBag.VesselID })

        <div class="form-group">
            @Html.LabelFor(model => model.TimeFrame, "Time Frame", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TimeFrame")
                @Html.ValidationMessageFor(model => model.TimeFrame)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Title, new { @class = "largetextbox" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Subtitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Subtitle, new { @class = "largetextbox" })
                @Html.ValidationMessageFor(model => model.Subtitle)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "largetextarea" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />&nbsp; |

                @Html.ActionLink("Cancel", "Edit", "Vessel", null, null, "story", new { id = Request.QueryString["VesselId"] }, null)

            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
