@{
    Layout = "~/Views/Shared/_Topic.cshtml";
    ViewBag.Title = "Dive Guides";
}

<article class="content">

    <div class="title one">@ViewBag.Title</div>
    <div class="spacer-orange"></div>
    <br /><br />

    <div class="content full" style="max-width: 800px;">

        <div style="margin-bottom: 50px;">
            These waterproof dive guides feature site maps, schematics, diving information, ship data and histories for Wisconsin's Lake Michigan and Lake Superior shipwrecks.  The result of hundreds of hours of archaeological and historical research conducted by the Wisconsin Historical Society, these guides are designed to go with you on your dives or be read in the comfort of your home.
        </div>

