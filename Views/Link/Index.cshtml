@model IEnumerable<WIShipwrecks.Models.Link>

@{
    ViewBag.Title = "Link";
}

<h2>Link</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@item.URL">
                    @Html.DisplayFor(modelItem => item.Title)
                </a>
            </td>
            <td width="70px">
                <a href="@Url.Action("Edit", "Link", new { id = item.ID })" class="btn btn-info btn-xs">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="@Url.Action("Delete", "Link", new { id = item.ID })" class="btn btn-danger btn-xs">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
    }

</table>
