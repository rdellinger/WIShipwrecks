@model WIShipwrecks.Models.Vessel

<!DOCTYPE html>

<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js">
<!--<![endif]-->

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WI Shipwrecks</title>
    @Styles.Render("~/Content/detailscss")
    @Styles.Render("~/Content/solidocss")
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")

    <script src="http://fast.fonts.net/jsapi/3dca1e78-579f-4502-8da9-3eb91453e0dc.js"></script>

</head>


<body>

    <div id="logx"></div>
    <header class="header">
        <div class="logo">
            <a href="~/Home#anchor3">
                <img src="~/Content/solido/img/ws_masthead-small.png" class="img-responsive" />
            </a>
        </div>
        <nav id="nav2" role="navigation">
            <a class="jump-menu" title="Show navigation">Show navigation</a>
            <ul>
                <li><a href="~/Home#anchor3">Home</a></li>
                <li class="current">@Html.ActionLink("Shipwrecks", "Index", "Shipwrecks")</li>
                <li>@Html.ActionLink("Attractions", "Index", "Attractions")</li>
                <li>@Html.ActionLink("Learn", "Index", "Learn")</li>
                <li>@Html.ActionLink("Contact Us", "Index", "Contact")</li>
                @if (User.IsInRole("Administrator") || User.IsInRole("Shipwrecks Administrator"))
                {
                    <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                }
            </ul>
        </nav>
        <nav class="menu">
            <ul id="nav">
                <li><a href="~/Home#anchor3">Home</a></li>
                <li class="current">@Html.ActionLink("Shipwrecks", "Index", "Shipwrecks")</li>
                <li>@Html.ActionLink("Attractions", "Index", "Attractions")</li>
                <li>@Html.ActionLink("Learn", "Index", "Learn")</li>
                <li>@Html.ActionLink("Contact Us", "Index", "Contact")</li>
                @if (User.IsInRole("Administrator") || User.IsInRole("Shipwrecks Administrator"))
                {
                    <li>@Html.ActionLink("Admin", "Index", "Admin")</li>
                }
            </ul>
        </nav>

        <div style="padding: 150px 0 0 0; text-align:center; background-color: white;">

            <span class="title one">@Model.VesselName</span>
            <div class="spacer"></div>

            <nav class="submenu">
                <ul id="nav" style="width: 1000px;">
                    @if (Model.VesselPhotos.Count() > 0)
                    {
                        <li>
                            <a href="#Gallery">Gallery</a>
                        </li>
                    }

                    <li><a href="#ByTheNumbers">By The Numbers</a></li>
                    <li><a href="#Details">Details</a></li>

                    @if (Model.VesselHistories.Count() > 0)
                    {
                        <li><a href="#ServiceHistory">Service History</a></li>
                    }

                    @if (Model.LatitudeDecimal != null)
                    {
                        <li><a href="#Map">Map</a></li>
                    }

                    @if (ViewBag.nearbyVesselsCount > 1 || ViewBag.nearbyAttractionsCount > 0)
                    {
                        <li><a href="#Nearby">Nearby</a></li>
                    }

                </ul>
            </nav>


        </div>

    </header>




    <div class="container-fluid body-content">
        @RenderBody()
    </div>



    <div class="socialFooter">
        <div class="social-icons">
            <div class="social">
                <a href="https://www.facebook.com/sharer/sharer.php?u=@Request.Url.ToString()">
                    <div class="face"></div>
                </a>
                <a href="https://twitter.com/home?status=@Request.Url.ToString()">
                    <div class="twitt"></div>
                </a>
                <a href="https://plus.google.com/share?url=@Request.Url.ToString()">
                    <div class="plus"></div>
                </a>
            </div>
        </div>
        <div class="clear"></div>
        <div class="copy">&copy; @DateTime.Now.Year - Wisconsin Sea Grant, Wisconsin Historical Society</div>
    </div>





    <script>window.jQuery || document.write('<script src="../../Content/solido/js/vendor/jquery-1.9.1.min.js"><\/script>')</script>
    <script src="http://fast.fonts.net/jsapi/3dca1e78-579f-4502-8da9-3eb91453e0dc.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/solido")
    @RenderSection("scripts", required: false)

</body>
</html>
