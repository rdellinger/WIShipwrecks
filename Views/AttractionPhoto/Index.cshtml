@model IEnumerable<WIShipwrecks.Models.AttractionPhoto>

@{
    ViewBag.Title = "All Attraction Photos";
}

<h2>All Attraction Photos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Caption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhotoSource)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attraction.AttractionName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Images/Attractions/@Html.DisplayFor(modelItem => item.Image)" width="300px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Caption)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhotoSource)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Attraction.AttractionName)
        </td>
        <td width="100px">
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
