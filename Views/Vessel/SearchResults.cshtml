@model IEnumerable<WIShipwrecks.Models.Vessel>

@{
    Layout = "~/Views/Shared/_List.cshtml";
    ViewBag.Title = "Shipwrecks - Search Results";
}

<header class="title one"><span style="color:#fd853f;">Shipwrecks</span> Search Results</header>
<div class="spacer"></div>

<br />

<div style="text-align: center;">
    <a href="javascript:history.back()">< Back to Search Form</a>
</div>

<br /><br />

@*If there are any results, then show them*@
@if (Model.Count() > 0)
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VesselName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VesselTypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyOfWaterID)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td width="60%">
                    <a href="@Url.Action("Details", "Vessel", new { id = item.ID, region = "InlandWaterways" })">
                        @Html.DisplayFor(modelItem => item.VesselName)
                    </a>

                </td>
                <td width="20%">
                    @Html.DisplayFor(modelItem => item.VesselType.VesselType1)
                </td>
                <td width="20%">
                    @Html.DisplayFor(modelItem => item.BodiesOfWater.BodyOfWater)
                </td>
            </tr>
        }

    </table>

}

    @*Otherwise, show the 'no records' message*@
else
{
    <div style="margin: 40px 0 0 0;">Sorry, we couldn't find a vessel that matches your search criteria.</div>
}




@section Scripts {
    @Scripts.Render("~/Scripts/vessel.js")
}